\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
(\lambda\lambda^{T}+\Psi)^{-1} & = & \Psi^{-1}-\frac{\Psi^{-1}\lambda\lambda^{T}\Psi^{-1}}{1+\lambda^{T}\Psi^{-1}\lambda}\\
 & = & (I-\frac{\Psi^{-1}\lambda\lambda^{T}}{1+\sum_{i=1}^{k}\sigma_{i}^{-2}\lambda^{2}})\Psi^{-1}\\
 & = & (I-v\lambda^{T})\Psi^{-1}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\lambda^{T}(\lambda\lambda^{T}+\Psi)^{-1}\lambda & = & \lambda^{T}(I-\frac{\Psi^{-1}\lambda\lambda^{T}}{1+\sum_{i=1}^{k}\sigma_{i}^{-2}\lambda^{2}})\Psi^{-1}\lambda\\
 & = & \sum_{i=1}^{k}\sigma_{i}^{-2}\lambda^{2}-\frac{(\sum_{i=1}^{k}\sigma_{i}^{-2}\lambda^{2})^{2}}{1+\sum_{i=1}^{k}\sigma_{i}^{-2}\lambda^{2}}\\
 & = & \frac{\sum_{i=1}^{k}\sigma_{i}^{-2}\lambda^{2}}{1+\sum_{i=1}^{k}\sigma_{i}^{-2}\lambda^{2}}
\end{eqnarray*}

\end_inset


