\begin_layout Standard
\begin_inset Formula 
\[
\Cov(\Xi)
\]

\end_inset


\begin_inset Formula 
\begin{eqnarray*}
E\hat{X}_{i} & = & \sum\nu_{k}^{i}p_{ij}(k,l)=-\sum\phi(\tau_{iY_{i}})-\phi(\tau_{i(Y_{i}-1)})=0\\
E\hat{X}_{i}\hat{X}_{j} & = & E\sum\nu_{k}^{i}1[Y_{i}=k]\sum v_{l}^{j}1[Y_{i}=l]\\
 & = & \sum_{i=1}^{k}\sum_{j=1}^{j}\nu_{k}^{i}v_{l}^{j}p_{ij}(k,l)
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\alpha_{s} & = & \frac{k}{k-1}\left(\frac{i^{T}\Phi i-k}{i^{T}\Phi i}\right)\\
 & = & k^{2}\left(\frac{\overline{\rho}}{i^{T}\Phi i}\right)
\end{eqnarray*}

\end_inset

Since 
\begin_inset Formula $\overline{\rho}=\lambda^{2}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\lambda^{2}}{\left(k\lambda^{2}+\sigma^{2}\right)^{2}}=\alpha_{s}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\left(k\lambda^{2}+\sigma^{2}\right)^{2} & = & ((i^{T}\Phi i)/k)^{2}\\
1/\left(k\lambda^{2}+\sigma^{2}\right)^{2} & = & k^{2}/(i^{T}\Phi i)^{2}\\
\\
\frac{\lambda^{2}}{\left(k\lambda^{2}+\sigma^{2}\right)^{2}}\mathbf{i}^{T}\Xi\mathbf{i} & = & k^{2}\frac{\overline{\rho}}{(i^{T}\Phi i)^{2}}\mathbf{i}^{T}\Xi\mathbf{i}\\
 & = & \alpha_{s}\frac{\mathbf{i}^{T}\Xi\mathbf{i}}{\mathbf{i}^{T}\Psi\mathbf{i}}
\end{eqnarray*}

\end_inset

Here 
\begin_inset Formula $\alpha_{s}$
\end_inset

 is the standardized alpha based on the polychoric correlation coefficient.
\end_layout

\begin_layout Subsection
Spearman
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\Cov(\hat{Z}_{1},\hat{Z}_{2}) & = & \Cov(\sum_{i=1}^{k_{1}}w_{i}^{1}X_{i}^{1},\sum_{j=1}^{k_{2}}w_{j}^{2}X_{j}^{2})\\
 & = & \sum_{i,j}w_{i}^{1}w_{j}^{2}\Cov(X_{i}^{1},X_{j}^{2})
\end{eqnarray*}

\end_inset

Here 
\begin_inset Formula 
\begin{eqnarray*}
\Cov(X_{i}^{1},X_{j}^{2}) & = & \Cov(\lambda_{i}^{1}Z^{1}+\sigma_{i}^{1}\epsilon_{i}^{1},\lambda_{j}^{2}Z^{2}+\sigma_{j}^{2}\epsilon_{j}^{2})\\
 & = & \lambda_{i}^{1}\lambda_{j}^{2}\Cor(Z^{1},Z^{2})
\end{eqnarray*}

\end_inset


\begin_inset Formula 
\[
\Cov(\hat{Z}_{1},\hat{Z}_{2})=\Cor(Z^{1},Z^{2})\left(\sum_{i=1}^{k_{2}}w_{i}^{1}\lambda_{i}^{1}\right)\left(\sum_{i=1}^{k_{2}}\lambda_{i}^{2}w_{i}^{2}\right)
\]

\end_inset


\end_layout

