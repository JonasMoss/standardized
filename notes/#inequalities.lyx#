\begin_layout Standard
\begin_inset Formula 
\[
\frac{1}{n}\sum x^{2}\geq\frac{1}{\left(\frac{1}{n}\sum x^{-1}\right)^{2}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{1}{n}\sum x^{2}\geq\left(\frac{1}{n}\sum x\right)^{2}\geq\left(\frac{1}{n}\sum x^{-1}\right)^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left[\frac{1}{k}\sum_{i=1}^{k}(1+x_{i}^{2})^{-1/2}\right]^{2}\left[\frac{1}{k}\sum_{i=1}^{k}x_{i}^{2}\right]\geq\frac{1}{k}\sum_{i=1}^{k}x_{i}^{2}(1+x_{i}^{2})^{-1}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
k\left[\frac{1}{k}\sum_{i=1}^{k}(1+x_{i}^{2})^{-1/2}\right]^{2}\left[\sum_{i=1}^{k}(1+x_{i}^{2})^{-1}\right]^{-1}\sum_{i=1}^{k}\left[\frac{1}{k}\sum_{i=1}^{k}x_{i}^{2}\right]\geq\left[\sum_{i=1}^{k}(1+x_{i}^{2})^{-1}\right]^{-1}\sum_{i=1}^{k}x_{i}^{2}(1+x_{i}^{2})^{-1}
\]

\end_inset

We know
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\sum_{i=1}^{k}\left[\frac{1}{k}\sum_{i=1}^{k}x_{i}^{2}\right]\geq\left[\sum_{i=1}^{k}(1+x_{i}^{2})^{-1}\right]^{-1}\sum_{i=1}^{k}x_{i}^{2}(1+x_{i}^{2})^{-1}
\]

\end_inset

from the weigted mean theorem.
 From Chebyshev's inequality,
\end_layout

