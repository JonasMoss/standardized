\begin_layout Standard
By Chebyshev's inequality,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
k\sum_{i=1}^{k}\sigma_{i}^{2}(\lambda^{2}+\sigma_{i}^{2})^{-1}\geq\left[\sum_{i=1}^{k}\sigma_{i}(\lambda^{2}+\sigma_{i}^{2})^{-1/2}\right]^{2}
\]

\end_inset

Need to show
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\left[\sum_{i=1}^{k}\sigma_{i}(\lambda^{2}+\sigma_{i}^{2})^{-1/2}\right]^{2} & \geq & \left[\sum_{i=1}^{k}(\lambda^{2}+\sigma_{i}^{2})^{-1/2}\right]^{2}\overline{\sigma^{-1}}^{-2}\\
\sum_{i=1}^{k}\sigma_{i}(\lambda^{2}+\sigma_{i}^{2})^{-1/2} & \geq & \sum_{i=1}^{k}(\lambda^{2}+\sigma_{i}^{2})^{-1/2}\overline{\sigma^{-1}}^{-1}\\
\frac{\sum_{i=1}^{k}\sigma_{i}(\lambda^{2}+\sigma_{i}^{2})^{-1/2}}{\sum_{i=1}^{k}(\lambda^{2}+\sigma_{i}^{2})^{-1/2}} & \geq & \overline{\sigma^{-1}}^{-1}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Call 
\begin_inset Formula $\frac{\sum_{i=1}^{k}\sigma_{i}(\lambda^{2}+\sigma_{i}^{2})^{-1/2}}{\sum_{i=1}^{k}(\lambda^{2}+\sigma_{i}^{2})^{-1/2}}=\sum_{i=1}^{k}\sigma_{i}w_{i}$
\end_inset

.
 Then
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\sum_{i=1}^{k}\sigma_{i}w_{i}\geq\left(\sum_{i=1}^{k}\frac{w_{i}}{\sigma_{i}}\right)^{-1}
\]

\end_inset

by the weighted harmonic mean inequality.
\end_layout

