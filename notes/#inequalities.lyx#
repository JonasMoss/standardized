\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\frac{1}{k}\sum_{i=1}^{k}x_{i}^{2}(1+x_{i}^{2})^{-1} & \geq & \left[\frac{1}{k}\sum_{i=1}^{k}(1+x_{i}^{2})^{-1}\right]\left[\frac{1}{k}\sum_{i=1}^{k}x_{i}^{2}\right]\\
 & \geq & \left[\frac{1}{k}\sum_{i=1}^{k}(1+x_{i}^{2})^{-1/2}\right]^{2}\left[\frac{1}{k}\sum_{i=1}^{k}x_{i}^{2}\right]\\
 & \geq & \left[\frac{1}{k}\sum_{i=1}^{k}(1+x_{i}^{2})^{-1/2}\right]^{2}\left[\frac{1}{k}\sum_{i=1}^{k}x_{i}^{2}\right]
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
k\left[\frac{1}{k}\sum_{i=1}^{k}(1+x_{i}^{2})^{-1/2}\right]^{2}\left[\sum_{i=1}^{k}(1+x_{i}^{2})^{-1}\right]^{-1}\sum_{i=1}^{k}\left[\frac{1}{k}\sum_{i=1}^{k}x_{i}^{2}\right]\geq\left[\sum_{i=1}^{k}(1+x_{i}^{2})^{-1}\right]^{-1}\sum_{i=1}^{k}x_{i}^{2}(1+x_{i}^{2})^{-1}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\left[\sum_{i=1}^{k}(\lambda^{2}+\sigma_{i}^{2})^{-1/2}\right]^{2}\overline{\sigma^{-1}}^{-2} & = & \left[\sum_{i=1}^{k}(\lambda^{2}+\sigma_{i}^{2})^{-1/2}\right]^{2}\left(\frac{1}{\frac{1}{k}\sum_{i=1}^{k}\sigma^{-1}}\right)^{2}\\
 & \leq & \left[\sum_{i=1}^{k}(\lambda^{2}+\sigma_{i}^{2})^{-1/2}\right]^{2}\overline{\sigma^{2}}
\end{eqnarray*}

\end_inset


\end_layout

