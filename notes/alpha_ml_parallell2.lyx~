\begin_body

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\nabla\log\left|\Sigma\right| & = & \frac{2k}{\lambda^{2}k+\sigma^{2}}\left(\begin{array}{c}
\frac{\lambda^{2}\left(k-1\right)+\sigma^{2}}{\sigma}\\
\lambda
\end{array}\right)\label{eq:Likelihood equations, parallell model}\\
\nabla\log\textrm{tr}\left(S\Sigma^{-1}\right) & = & \left(\begin{array}{c}
-2\sigma^{-3}\textrm{tr}S+2\lambda^{2}\left(\frac{1}{\sigma^{3}\left(\lambda^{2}k+\sigma^{2}\right)}+\frac{1}{\sigma\left(\lambda^{2}k+\sigma^{2}\right)^{2}}\right)\mathbf{i}^{T}S\mathbf{i}\\
-\frac{2\lambda}{\left(\lambda^{2}k+\sigma^{2}\right)^{2}}\mathbf{i}^{T}S\mathbf{i}
\end{array}\right)\nonumber 
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\nabla\log\left|\Sigma\right|+\nabla\log\textrm{tr}\left(S\Sigma^{-1}\right)+\mu\lambda
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\frac{2\lambda}{\left(\lambda^{2}k+\sigma^{2}\right)^{2}}\mathbf{i}^{T}S\mathbf{i} & = & \frac{2k\lambda}{\lambda^{2}k+\sigma^{2}}+\mu\\
\frac{\mathbf{i}^{T}S\mathbf{i}}{k} & = & \left(\lambda^{2}k+\sigma^{2}\right)\left(1+\frac{\mu}{2k\lambda}\left(\lambda^{2}k+\sigma^{2}\right)\right)
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\textrm{tr}S}{k}=\sigma^{2}+\lambda^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\mu\lambda & \geq & 0\\
\lambda & \geq & 0\\
\sigma & > & 0
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Substitute 
\begin_inset Formula $\sigma^{2}=\frac{\textrm{tr}S}{k}-\lambda^{2}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\frac{\mathbf{i}^{T}S\mathbf{i}}{k} & = & 2k\lambda\left(\lambda^{2}\left(k-1\right)+\frac{\textrm{tr}S}{k}\right)\left(2k\lambda+\mu\left(\lambda^{2}\left(k-1\right)+\frac{\textrm{tr}S}{k}\right)\right)\\
 & =
\end{eqnarray*}

\end_inset

A solution is 
\begin_inset Formula $\lambda=0$
\end_inset

, 
\begin_inset Formula $\mu=0$
\end_inset

.
 Then 
\begin_inset Formula $\sigma^{2}=\frac{\textrm{tr}S}{k}$
\end_inset

.
\end_layout

